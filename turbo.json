{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "type-check"],
      "outputs": ["dist/**", "build/**", ".next/**", "storybook-static/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "vitest.config.ts", "package.json"]
    },
    "test:run": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "*.js", "*.ts", "package.json"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*.d.ts", "*.tsbuildinfo"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json", "package.json"]
    },
    "clean": {
      "cache": false
    },
    "clean:build": {
      "cache": false
    }
  }
}