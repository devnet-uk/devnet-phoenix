{
  "name": "devnet-phoenix",
  "version": "0.0.1",
  "description": "Phoenix: Production-ready SaaS foundation built on Engineering OS framework",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:run": "turbo test:run",
    "test:coverage": "turbo test:coverage",
    "coverage:check": "vitest run --coverage --reporter=verbose --coverage.thresholds.lines=98 --coverage.thresholds.functions=98 --coverage.thresholds.branches=98 --coverage.thresholds.statements=98",
    "lint": "turbo lint",
    "prepare": "husky",
    "commit": "cz",
    "clean": "pnpm -r run clean",
    "clean:deps": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "clean:build": "pnpm -r run clean:build",
    "type-check": "turbo type-check",
    "workspace:list": "pnpm list -r --depth=-1",
    "workspace:outdated": "pnpm outdated -r",
    "workspace:update": "pnpm update -r",
    "workspace:install": "pnpm install --frozen-lockfile"
  },
  "keywords": [
    "saas",
    "engineering-os",
    "clean-architecture",
    "production-ready",
    "typescript",
    "nextjs"
  ],
  "author": "DevNet Engineering <engineering@devnet.uk>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devnet-uk/devnet-phoenix.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.15.1"
  },
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.1.6",
    "turbo": "^2.5.6",
    "vitest": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "vitest related --run"
    ],
    "*.{js,jsx,ts,tsx,json,md}": [
      "echo 'BiomeJS linting - Phase 0 Step 3 implementation'"
    ]
  }
}
