{
  "name": "@phoenix/database",
  "version": "0.0.1",
  "description": "Drizzle ORM schemas and database utilities for Phoenix platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "migrate": "drizzle-kit migrate",
    "seed": "tsx scripts/seed.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@phoenix/contracts": "workspace:*",
    "drizzle-orm": "^0.44.4",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.19.2"
  },
  "keywords": ["database", "drizzle-orm", "postgresql", "migrations"],
  "author": "DevNet Engineering <engineering@devnet.uk>",
  "license": "MIT",
  "publishConfig": {
    "access": "restricted"
  }
}