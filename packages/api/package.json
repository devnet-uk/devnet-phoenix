{
  "name": "@phoenix/api",
  "version": "0.0.1",
  "description": "HonoJS API server with Clean Architecture for Phoenix platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@phoenix/contracts": "workspace:*",
    "hono": "^4.9.4"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "tsx": "^4.19.2"
  },
  "keywords": ["api", "hono", "clean-architecture", "backend"],
  "author": "DevNet Engineering <engineering@devnet.uk>",
  "license": "MIT",
  "publishConfig": {
    "access": "restricted"
  }
}